@model System.Security.Claims.ClaimsPrincipal

@{
    ViewBag.Title = "About";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<p>Use this area to provide additional information.</p>

<dl>
    @foreach (var claim in Model.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<hr />

<h3>Roles</h3>

<p>
    In RoleA: @Model.IsInRole("RoleA").ToString()
    <br />
    In RoleB: @Model.IsInRole("RoleB").ToString()

    <!--
    In Anonymous Role: @Model.IsInRole("Anonymous").ToString()
    <br />
    In Manager Role: @Model.IsInRole("Manager").ToString()
    <br />
    In Global Admin Role: @Model.IsInRole("Admin").ToString()
    -->
</p>
